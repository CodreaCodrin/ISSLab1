<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="registerRootVBox"
      alignment="CENTER"
      spacing="10"
      styleClass="vbox-overlay"
      stylesheets="@../css/register.css"
      fx:controller="iss.Controllers.RegisterController">

    <!-- Username Field -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Username:"/>
        <TextField fx:id="usernameField" promptText="Enter your username"/>
    </HBox>

    <!-- Password Field -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"/>
    </HBox>

    <!-- Login Button -->
    <Button text="Register" fx:id="registerButton" prefWidth="100" onAction="#handleRegister"/>
</VBox>
